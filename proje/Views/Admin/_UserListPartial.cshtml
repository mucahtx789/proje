@model List<RegisterViewModel>

<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>id</th>
            <th>Ad</th>
            <th>Soy Ad</th>
            <th>Mail</th>
            <th>Telefon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (RegisterViewModel user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.lastName</td>
                <td>@user.Email</td>
                <td>@user.Telephone</td>
                <td class="text-end">
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" asp-route-data="@user.Role" data-ajax-confirm="Bu  @user.Email hesabı silmek istediğinize emin misiniz ?" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel" class="btn btn-danger btn-sm text-black">Sil </a>
                </td>
            </tr>
        }

    </tbody>
</table>
