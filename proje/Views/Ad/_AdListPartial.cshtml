@model List<AdViewModel>


<table class="table table-hover table-sm ">
   @foreach (AdViewModel ad in Model)
        {
    <thead>
        
        <tr>
            <th>Başlık</th>
                <td>@ad.Title</td>
         </tr>
         
         <tr>
            <th>Özellikler</th>
            <th>ilan detay</th>
            <th>Satıcının Telefon numarası</th>
            <th>İlan oluşturma Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

       
            <tr>
                
                <td>@ad.Properties</td>
                <td>@ad.TextBody</td>
                <td>@ad.sellerTelephone</td>
                <td>@ad.CreatedAt</td>

                <td class="text-end">
                    @if(@ad.SalesType=="RentHouse"){
                        <a asp-action="rentHouseDetails" asp-route-typeID="@ad.typeId" asp-route-adresID="@ad.AddressId" data-bs-target="#panel2" data-bs-toggle="modal" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel2Content" class="btn btn-primary btn-sm">Detay</a>
                    }
                    @if(@ad.SalesType=="SalesHouse"){
                        <a asp-action="saleHouseDetails" asp-route-typeID="@ad.typeId" asp-route-adresID="@ad.AddressId" data-bs-target="#panel2" data-bs-toggle="modal" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel2Content" class="btn btn-primary btn-sm">Detay</a>
                    }
                    @if (@ad.SalesType == "Land")
                    {
                        <a asp-action="landDetails" asp-route-typeID="@ad.typeId" asp-route-adresID="@ad.AddressId" data-bs-target="#panel2" data-bs-toggle="modal" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel2Content" class="btn btn-primary btn-sm">Detay</a>
                    }
                </td>
            </tr>
       

    </tbody>
    }
</table>