@model List<AdViewModel>


<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Özellikler</th>
            <th>ilan detay</th>
            <th>Satıcının Telefon numarası</th>
            <th>İlan oluşturma Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (AdViewModel ad in Model)
        {
            <tr>
                <td>@ad.Title</td>
                <td>@ad.Properties</td>
                <td>@ad.TextBody</td>
                <td>@ad.sellerTelephone</td>
                <td>@ad.CreatedAt</td>

                <td class="text-end">
                   
                      
                    <a asp-action="DeleteAd" asp-route-adid="@ad.Id" data-ajax-confirm="Bu  @ad.Title bu ilanı silmek istediğinize emin misiniz ?" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel" class="btn btn-danger btn-sm text-black">Sil </a>
                   
                </td>
            </tr>
        }

    </tbody>
</table>
